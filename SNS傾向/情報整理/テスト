                <button onclick="app.saveApiKey()" class="bg-primary text-white font-bold px-4 py-2 rounded-lg">保存</button>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div id="toastContainer" class="fixed bottom-5 right-5 z-[100] flex flex-col gap-2 pointer-events-none"></div>

    <script>
        // --- アプリケーションのロジック ---
        class TodoApp {
            constructor() {
                this.state = {
                    currentDate: new Date(),
                    view: 'team', // team, private, report, members
                    members: [],
                    tasks: [],
                    privateTodos: [],
                    privateNotes: [],
                    categories: ['事務', '開発', '連絡', 'アイデア'],
                    reports: {}, // date string key
                    apiKey: ''
                };
                this.colors = ['#3B82F6', '#10B981', '#F59E0B', '#EF4444', '#8B5CF6', '#EC4899', '#64748B'];
                
                this.init();
            }

            init() {
                this.loadData();
                this.render(); // Render first to ensure initial state UI
                this.setupEventListeners();
                this.updateDateDisplay();
            }

            setupEventListeners() {
                // New Note Shortcut (Shift + Enter)
                const noteInput = document.getElementById('newNoteInput');
                if (noteInput) {
                    noteInput.addEventListener('keydown', (e) => {
                        if (e.key === 'Enter' && e.shiftKey) {
                            e.preventDefault();
                            this.addPrivateNote();
                        }
                    });
                }
            }
            // ↑↑↑ ここまで ↑↑↑

            // --- Data Persistence (LocalStorage) ---
            saveData() {
                localStorage.setItem('teamsync_data', JSON.stringify({
                    members: this.state.members,
                    tasks: this.state.tasks,
                    privateTodos: this.state.privateTodos,
                    privateNotes: this.state.privateNotes,
                    categories: this.state.categories,
                    reports: this.state.reports,
                    apiKey: this.state.apiKey
                }));
            }

            loadData() {
                const saved = localStorage.getItem('teamsync_data');
                if (saved) {
                    const parsed = JSON.parse(saved);
                    this.state = { ...this.state, ...parsed };
                    if (!this.state.categories) this.state.categories = ['事務', '開発', '連絡', 'アイデア'];
                } else {
                    // Initial Dummy Data
                    this.state.members = [
                        { id: 'm1', name: '川添皓哉', color: '#3B82F6' },
                      
                    ];
                    this.state.tasks = [
                        { id: 't1', title: 'API仕様書修正', desc: 'Swaggerの更新', assigneeId: 'm1', status: 'todo', priority: '緊急', date: this.formatDateKey(new Date()), subtasks: [] },
                        { id: 't2', title: 'LPデザイン', desc: 'Figma作成', assigneeId: 'm2', status: 'done', priority: '中', date: this.formatDateKey(new Date()), subtasks: [] }
                    ];
                    this.state.privateTodos = [
                        { id: 'p1', text: '経費精算', category: '事務処理', done: false }
                    ];
                }
            }

            // --- Render Logic ---
            render() {
                this.renderTeamBoard();
                this.renderPrivateView();
                this.renderReportView();
                this.renderMembersView();
                this.renderNav();
                this.renderSettings();
                
                // Set Header Title
                const titles = { team: 'タスクボード', private: 'マイタスク', report: '日報・レポート', members: 'メンバー管理' };
                document.getElementById('viewTitle').textContent = titles[this.state.view];
            }

            renderSettings() {
                const container = document.getElementById('categoryManageList');
                if (container) {
                    container.innerHTML = this.state.categories.map(cat => `
                        <div class="bg-gray-100 px-3 py-1 rounded-full flex items-center gap-2 text-sm">
                            <span>${cat}</span>
                            <button onclick="app.deleteCategory('${cat}')" class="text-slate-400 hover:text-red-500"><i class="fa-solid fa-xmark"></i></button>
                        </div>
                    `).join('');
                }
            }

            // Settings Actions
            addCategory() {
                const input = document.getElementById('newCategoryInput');
                const val = input.value.trim();
                if (!val) return;
                if (this.state.categories.includes(val)) return alert('既にあるカテゴリです');
                this.state.categories.push(val);
                input.value = '';
                this.saveData();
                this.render();
            }

            deleteCategory(cat) {
                if (this.state.privateTodos.some(t => t.category === cat)) {
                    return alert('このカテゴリを使用しているタスクがあります');
                }
                this.state.categories = this.state.categories.filter(c => c !== cat);
                this.saveData();
                this.render();
            }

            exportData() {
                const data = JSON.stringify(this.state, null, 2);
                const blob = new Blob([data], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                const dateStr = this.formatDateKey(new Date());
                a.href = url;
                a.download = `teamsync_backup_${dateStr}.json`;
                a.click();
                URL.revokeObjectURL(url);
                this.showToast('データをエクスポートしました');
            }

            importData(event) {
                const file = event.target.files[0];
                if (!file) return;
                const reader = new FileReader();
                reader.onload = (e) => {
                    try {
                        const data = JSON.parse(e.target.result);
                        if (confirm('現在のデータが上書きされます。よろしいですか？')) {
                            this.state = { ...this.state, ...data };
                            this.saveData();
                            this.render();
                            this.showToast('データをインポートしました');
                        }
                    } catch (err) {
                        alert('ファイルの読み込みに失敗しました');
                    }
                };
                reader.readAsText(file);
                event.target.value = '';
            }

            renderNav() {
                document.querySelectorAll('.nav-item').forEach(el => {
                    el.classList.remove('active', 'active-private', 'text-slate-900', 'font-bold');
                    el.classList.add('text-slate-600');
                });
                
                const activeId = `nav-${this.state.view}`;
                const el = document.getElementById(activeId);
                if (el) {
                    el.classList.remove('text-slate-600');
                    if (this.state.view === 'private') {
                        el.classList.add('active-private');
                    } else {
                        el.classList.add('active');
                    }
                }
            }

            renderTeamBoard() {
                const container = document.getElementById('teamBoardContainer');
                container.innerHTML = '';
                const dateKey = this.formatDateKey(this.state.currentDate);

                this.state.members.forEach(member => {
                    const memberTasks = this.state.tasks.filter(t => t.assigneeId === member.id && t.date === dateKey);
                    const doneCount = memberTasks.filter(t => t.status === 'done').length;
                    
                    const col = document.createElement('div');
                    col.className = 'flex flex-col h-full w-80 bg-white rounded-xl border border-gray-200 shadow-sm flex-shrink-0';
                    col.innerHTML = `
                        <div class="p-4 border-b border-gray-100 flex justify-between items-center bg-gray-50/50 rounded-t-xl">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full text-white flex items-center justify-center font-bold shadow-sm" style="background-color: ${member.color}">
                                    ${member.name.charAt(0)}
                                </div>
                                <div>
                                    <h3 class="font-bold text-slate-800">${member.name}</h3>
                                    <p class="text-xs text-slate-500">完了: ${doneCount} / 全体: ${memberTasks.length}</p>
                                </div>
                            </div>
                            <button onclick="app.openTaskModal(null, '${member.id}')" class="text-slate-400 hover:text-primary"><i class="fa-solid fa-plus"></i></button>
                        </div>
                        <div class="p-3 flex-1 overflow-y-auto space-y-3 bg-gray-50/30 task-list-area" data-member-id="${member.id}">
                            ${memberTasks.map(task => this.createTaskCardHtml(task)).join('')}
                            <button onclick="app.openTaskModal(null, '${member.id}')" class="w-full py-3 border-2 border-dashed border-gray-200 rounded-lg text-slate-400 text-sm hover:border-primary hover:text-primary hover:bg-blue-50 transition-colors">
                                <i class="fa-solid fa-plus"></i> タスク追加
                            </button>
                        </div>
                    `;
                    container.appendChild(col);
                });

                // メンバー追加カード
                const addCol = document.createElement('div');
                addCol.className = 'flex flex-col h-full w-20 items-center justify-center rounded-xl border-2 border-dashed border-gray-200 hover:bg-gray-50 cursor-pointer transition-colors flex-shrink-0';
                addCol.onclick = () => this.switchView('members');
                addCol.innerHTML = '<i class="fa-solid fa-user-plus text-2xl text-slate-300"></i>';
                container.appendChild(addCol);
            }

            createTaskCardHtml(task) {
                const isDone = task.status === 'done';
                const priorityColors = { '緊急': 'bg-red-100 text-red-700', '高': 'bg-orange-100 text-orange-700', '中': 'bg-blue-100 text-blue-700', '低': 'bg-gray-100 text-gray-700' };
                
                return `
                <div class="task-card bg-white p-4 rounded-lg border ${isDone ? 'border-gray-200 opacity-60' : 'border-gray-200 border-l-4 ' + (task.priority === '緊急' ? 'border-l-red-500' : 'border-l-transparent')} shadow-sm cursor-pointer relative group" onclick="app.openTaskModal('${task.id}')">
                    <div class="flex justify-between items-start mb-2">
                        <span class="text-[10px] px-2 py-0.5 rounded font-bold ${priorityColors[task.priority]}">${task.priority}</span>
                        <div class="flex gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button onclick="event.stopPropagation(); app.toggleTaskStatus('${task.id}')" class="p-1 text-slate-400 hover:text-green-500" title="完了/未完了">
                                <i class="fa-regular ${isDone ? 'fa-circle-check text-green-500' : 'fa-circle'}"></i>
                            </button>
                        </div>
                    </div>
                    <h4 class="font-bold text-slate-800 text-sm mb-1 ${isDone ? 'line-through text-slate-500' : ''}">${task.title}</h4>
                    <p class="text-xs text-slate-500 line-clamp-2">${task.desc || ''}</p>
                    ${task.subtasks && task.subtasks.length > 0 ? `
                        <div class="mt-3 flex items-center gap-2 text-xs text-slate-400">
                            <i class="fa-solid fa-list-check"></i> ${task.subtasks.filter(s => s.done).length}/${task.subtasks.length}
                        </div>
                    ` : ''}
                </div>`;
            }

            renderPrivateView() {
                // Render Categories
                const catSelector = document.getElementById('newPrivateTodoCategory');
                if (catSelector) {
                    catSelector.innerHTML = this.state.categories.map(c => `<option value="${c}">${c}</option>`).join('');
                }

                const catTabs = document.getElementById('privateCategoryTabs');
                if (catTabs) {
                    const currentFilter = this.state.privateFilter || 'すべて';
                    let tabsHtml = `<button onclick="app.setPrivateFilter('すべて')" class="text-xs ${currentFilter === 'すべて' ? 'font-bold bg-purple-100 text-purple-700' : 'font-medium text-slate-500 hover:bg-gray-100'} px-3 py-1 rounded-full whitespace-nowrap">すべて</button>`;
                    tabsHtml += this.state.categories.map(c => `
                        <button onclick="app.setPrivateFilter('${c}')" class="text-xs ${currentFilter === c ? 'font-bold bg-purple-100 text-purple-700' : 'font-medium text-slate-500 hover:bg-gray-100'} px-3 py-1 rounded-full whitespace-nowrap">${c}</button>
                    `).join('');
                    catTabs.innerHTML = tabsHtml;
                }

                const todoList = document.getElementById('privateTodoList');
                const filteredTodos = (this.state.privateFilter && this.state.privateFilter !== 'すべて') 
                    ? this.state.privateTodos.filter(t => t.category === this.state.privateFilter)
                    : this.state.privateTodos;

                todoList.innerHTML = filteredTodos.map(todo => `
                    <li class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded group">
                        <input type="checkbox" onchange="app.togglePrivateTodo('${todo.id}')" ${todo.done ? 'checked' : ''} class="w-4 h-4 rounded border-gray-300 text-private focus:ring-private cursor-pointer">
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2">
                                <span class="text-sm text-slate-700 ${todo.done ? 'line-through text-slate-400' : ''}">${todo.text}</span>
                                <span class="text-[10px] bg-gray-100 text-slate-500 px-1.5 py-0.5 rounded">${todo.category}</span>
                            </div>
                        </div>
                        <button onclick="app.deletePrivateTodo('${todo.id}')" class="text-slate-300 hover:text-red-500 opacity-0 group-hover:opacity-100 transition-opacity"><i class="fa-solid fa-trash"></i></button>
                    </li>
                `).join('');

                const noteList = document.getElementById('privateNoteList');
                noteList.innerHTML = this.state.privateNotes.map(note => `
                    <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-100 relative group">
                        <p class="text-sm text-slate-700 leading-relaxed whitespace-pre-wrap">${note.content}</p>
                        <span class="absolute bottom-2 right-2 text-[10px] text-slate-400">${new Date(note.date).toLocaleDateString()}</span>
                        <button onclick="app.deletePrivateNote('${note.id}')" class="absolute top-2 right-2 text-yellow-300 hover:text-red-500 opacity-0 group-hover:opacity-100 transition-opacity"><i class="fa-solid fa-trash"></i></button>
                    </div>
                `).join('');
            }

            renderReportView() {
                const dateKey = this.formatDateKey(this.state.currentDate);
                document.getElementById('reportDateTitle').textContent = `${this.state.currentDate.getMonth() + 1}月${this.state.currentDate.getDate()}日のレポート`;
                
                const dailyTasks = this.state.tasks.filter(t => t.date === dateKey);
                const doneTasks = dailyTasks.filter(t => t.status === 'done');
                const todoTasks = dailyTasks.filter(t => t.status !== 'done');
                
                const progress = dailyTasks.length > 0 ? Math.round((doneTasks.length / dailyTasks.length) * 100) : 0;
                document.getElementById('reportProgress').textContent = `${progress}%`;

                document.getElementById('reportDoneList').innerHTML = doneTasks.length ? doneTasks.map(t => `<li>・${t.title}</li>`).join('') : '<li class="text-slate-400">なし</li>';
                document.getElementById('reportTodoList').innerHTML = todoTasks.length ? todoTasks.map(t => `<li>・${t.title}</li>`).join('') : '<li class="text-slate-400">なし</li>';

                // Action Plans
                const reportData = this.state.reports[dateKey] || { actions: {} };
                const inputsContainer = document.getElementById('actionPlanInputs');
                inputsContainer.innerHTML = dailyTasks.map(task => `
                    <div class="bg-white border border-gray-200 rounded-lg p-3">
                        <p class="text-sm font-bold text-slate-700 mb-2 flex items-center gap-2">
                            <span class="w-2 h-2 rounded-full ${task.status === 'done' ? 'bg-green-500' : 'bg-orange-500'}"></span>
                            ${task.title}
                        </p>
                        <textarea id="action_${task.id}" class="w-full bg-gray-50 border border-gray-200 rounded p-2 text-xs resize-none h-16 outline-none focus:bg-white focus:ring-1 focus:ring-primary" placeholder="振り返りや次回のアクション...">${reportData.actions[task.id] || ''}</textarea>
                    </div>
                `).join('');
                if (dailyTasks.length === 0) inputsContainer.innerHTML = '<p class="text-center text-slate-400 text-sm py-4">この日のタスクはありません。</p>';
            }

            renderMembersView() {
                const container = document.getElementById('membersList');
                container.innerHTML = this.state.members.map(m => `
                    <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm flex justify-between items-center">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full text-white flex items-center justify-center font-bold" style="background-color: ${m.color}">${m.name.charAt(0)}</div>
                            <span class="font-bold text-slate-700">${m.name}</span>
                        </div>
                        <button onclick="app.openMemberModal('${m.id}')" class="text-slate-400 hover:text-primary"><i class="fa-solid fa-pen"></i></button>
                    </div>
                `).join('');
            }

            // --- Actions ---
            switchView(view) {
                this.state.view = view;
                document.getElementById('view-team').classList.add('hidden');
                document.getElementById('view-private').classList.add('hidden');
                document.getElementById('view-report').classList.add('hidden');
                document.getElementById('view-members').classList.add('hidden');
                
                document.getElementById(`view-${view}`).classList.remove('hidden');
                this.render();
            }

            changeDate(offset) {
                const d = new Date(this.state.currentDate);
                d.setDate(d.getDate() + offset);
                this.state.currentDate = d;
                this.updateDateDisplay();
                this.render();
            }

            resetDate() {
                this.state.currentDate = new Date();
                this.updateDateDisplay();
                this.render();
            }

            updateDateDisplay() {
                const options = { year: 'numeric', month: 'short', day: 'numeric', weekday: 'short' };
                document.getElementById('currentDateDisplay').textContent = this.state.currentDate.toLocaleDateString('ja-JP', options);
            }

            formatDateKey(date) {
                return date.toISOString().split('T')[0];
            }

            // Task Actions
            openTaskModal(taskId = null, assigneeId = null) {
                document.getElementById('taskModal').classList.remove('hidden');
                document.getElementById('aiSuggestionBadge').classList.add('hidden');
                document.getElementById('subtaskList').innerHTML = '';
                
                // Populate Assignee Select
                const select = document.getElementById('taskAssigneeInput');
                select.innerHTML = this.state.members.map(m => `<option value="${m.id}">${m.name}</option>`).join('');

                if (taskId) {
                    const task = this.state.tasks.find(t => t.id === taskId);
                    document.getElementById('taskIdInput').value = task.id;
                    document.getElementById('taskTitleInput').value = task.title;
                    document.getElementById('taskDescInput').value = task.desc || '';
                    document.getElementById('taskAssigneeInput').value = task.assigneeId;
                    document.getElementById('taskPriorityInput').value = task.priority;
                    document.getElementById('deleteTaskBtn').classList.remove('hidden');
                    
                    if(task.subtasks) {
                        task.subtasks.forEach(s => this.addSubtaskItem(s.title, s.done));
                    }
                } else {
                    document.getElementById('taskIdInput').value = '';
                    document.getElementById('taskTitleInput').value = '';
                    document.getElementById('taskDescInput').value = '';
                    if (assigneeId) document.getElementById('taskAssigneeInput').value = assigneeId;
                    document.getElementById('taskPriorityInput').value = '中';
                    document.getElementById('deleteTaskBtn').classList.add('hidden');
                }
            }

            addSubtaskItem(text, done = false) {
                const div = document.createElement('div');
                div.className = 'flex items-center gap-2';
                div.innerHTML = `
                    <input type="checkbox" class="subtask-check w-4 h-4 rounded text-primary" ${done ? 'checked' : ''}>
                    <input type="text" class="subtask-text flex-1 border border-gray-200 rounded px-2 py-1 text-sm" value="${text}" placeholder="サブタスク">
                    <button onclick="this.parentElement.remove()" class="text-slate-300 hover:text-red-500"><i class="fa-solid fa-xmark"></i></button>
                `;
                document.getElementById('subtaskList').appendChild(div);
            }

            saveTask() {
                const id = document.getElementById('taskIdInput').value;
                const title = document.getElementById('taskTitleInput').value;
                if (!title) return alert('タイトルは必須です');

                const subtasks = Array.from(document.querySelectorAll('#subtaskList > div')).map(el => ({
                    title: el.querySelector('.subtask-text').value,
                    done: el.querySelector('.subtask-check').checked
                })).filter(s => s.title);

                const taskData = {
                    title,
                    desc: document.getElementById('taskDescInput').value,
                    assigneeId: document.getElementById('taskAssigneeInput').value,
                    priority: document.getElementById('taskPriorityInput').value,
                    subtasks
                };

                if (id) {
                    const idx = this.state.tasks.findIndex(t => t.id === id);
                    this.state.tasks[idx] = { ...this.state.tasks[idx], ...taskData };
                } else {
                    this.state.tasks.push({
                        id: 't' + Date.now(),
                        status: 'todo',
                        date: this.formatDateKey(this.state.currentDate),
                        ...taskData
                    });
                }
                this.saveData();
                this.closeModal('taskModal');
                this.render();
                this.showToast('タスクを保存しました');
            }

            deleteTask() {
                const id = document.getElementById('taskIdInput').value;
                if (!confirm('削除しますか？')) return;
                this.state.tasks = this.state.tasks.filter(t => t.id !== id);
                this.saveData();
                this.closeModal('taskModal');
                this.render();
                this.showToast('タスクを削除しました');
            }

            toggleTaskStatus(taskId) {
                const task = this.state.tasks.find(t => t.id === taskId);
                task.status = task.status === 'done' ? 'todo' : 'done';
                this.saveData();
                this.render();
            }

            setPrivateFilter(filter) {
                this.state.privateFilter = filter;
                this.renderPrivateView();
            }

            // Private Todo Actions
            addPrivateTodo() {
                const input = document.getElementById('newPrivateTodoInput');
                const catSelect = document.getElementById('newPrivateTodoCategory');
                if (!input.value.trim()) return;
                
                this.state.privateTodos.push({
                    id: 'p' + Date.now(),
                    text: input.value,
                    category: catSelect.value,
                    done: false
                });
                input.value = '';
                this.saveData();
                this.renderPrivateView();
            }

            togglePrivateTodo(id) {
                const todo = this.state.privateTodos.find(t => t.id === id);
                todo.done = !todo.done;
                this.saveData();
                this.renderPrivateView();
            }

            deletePrivateTodo(id) {
                this.state.privateTodos = this.state.privateTodos.filter(t => t.id !== id);
                this.saveData();
                this.renderPrivateView();
            }

            // Note Actions
            addPrivateNote() {
                const input = document.getElementById('newNoteInput');
                if (!input.value.trim()) return;
                this.state.privateNotes.unshift({
                    id: 'n' + Date.now(),
                    content: input.value,
                    date: new Date().toISOString()
                });
                input.value = '';
                this.saveData();
                this.renderPrivateView();
            }
            
            deletePrivateNote(id) {
                if(!confirm('メモを削除しますか？')) return;
                this.state.privateNotes = this.state.privateNotes.filter(n => n.id !== id);
                this.saveData();
                this.renderPrivateView();
            }

            // Report Actions
            saveReport() {
                const dateKey = this.formatDateKey(this.state.currentDate);
                const dailyTasks = this.state.tasks.filter(t => t.date === dateKey);
                
                if (!this.state.reports[dateKey]) this.state.reports[dateKey] = { actions: {} };
                
                dailyTasks.forEach(task => {
                    const val = document.getElementById(`action_${task.id}`).value;
                    this.state.reports[dateKey].actions[task.id] = val;
                });
                
                this.saveData();
                this.showToast('日報を保存しました');
            }

            // Member Actions
            openMemberModal(id = null) {
                document.getElementById('memberModal').classList.remove('hidden');
                const picker = document.getElementById('colorPicker');
                picker.innerHTML = this.colors.map(c => 
                    `<div onclick="app.selectColor('${c}')" class="w-8 h-8 rounded-full cursor-pointer border-2 border-transparent hover:scale-110 transition-transform color-option" style="background-color: ${c}" data-color="${c}"></div>`
                ).join('');

                if (id) {
                    const m = this.state.members.find(m => m.id === id);
                    document.getElementById('memberIdInput').value = m.id;
                    document.getElementById('memberNameInput').value = m.name;
                    this.selectColor(m.color);
                    document.getElementById('deleteMemberBtn').classList.remove('hidden');
                } else {
                    document.getElementById('memberIdInput').value = '';
                    document.getElementById('memberNameInput').value = '';
                    this.selectColor(this.colors[0]);
                    document.getElementById('deleteMemberBtn').classList.add('hidden');
                }
            }

            selectColor(color) {
                this.selectedColor = color;
                document.querySelectorAll('.color-option').forEach(el => {
                    el.style.borderColor = el.dataset.color === color ? '#333' : 'transparent';
                });
            }

            saveMember() {
                const id = document.getElementById('memberIdInput').value;
                const name = document.getElementById('memberNameInput').value;
                if (!name) return alert('名前は必須です');

                const memberData = { name, color: this.selectedColor || this.colors[0] };

                if (id) {
                    const idx = this.state.members.findIndex(m => m.id === id);
                    this.state.members[idx] = { ...this.state.members[idx], ...memberData };
                } else {
                    this.state.members.push({ id: 'm' + Date.now(), ...memberData });
                }
                this.saveData();
                this.closeModal('memberModal');
                this.render();
            }

            deleteMember() {
                const id = document.getElementById('memberIdInput').value;
                if (this.state.tasks.some(t => t.assigneeId === id)) {
                    return alert('このメンバーにはタスクが割り当てられています。先にタスクの担当者を変更するか削除してください。');
                }
                if (!confirm('削除しますか？')) return;
                this.state.members = this.state.members.filter(m => m.id !== id);
                this.saveData();
                this.closeModal('memberModal');
                this.render();
            }

            // Gemini API Logic
            saveApiKey() {
                this.state.apiKey = document.getElementById('apiKeyInput').value;
                this.saveData();
                document.getElementById('apiSettingModal').classList.add('hidden');
                this.showToast('APIキーを保存しました');
            }

            async callGemini(prompt) {
                if (!this.state.apiKey) {
                    alert('APIキーが設定されていません。右上の歯車アイコンから設定してください。');
                    return null;
                }
                const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${this.state.apiKey}`;
                try {
                    const res = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ contents: [{ parts: [{ text: prompt }] }] })
                    });
                    const data = await res.json();
                    return data.candidates?.[0]?.content?.parts?.[0]?.text;
                } catch (e) {
                    console.error(e);
                    alert('AI呼び出しエラー');
                    return null;
                }
            }

            async processAIInput() {
                const text = document.getElementById('aiPromptInput').value;
                if (!text) return;
                
                document.getElementById('aiInputStep1').classList.add('hidden');
                document.getElementById('aiInputStep2').classList.remove('hidden');

                const membersList = this.state.members.map(m => m.name).join(', ');
                const prompt = `
                    Parse this task request into JSON.
                    Members: ${membersList}. If name matches fuzzily, use exact name.
                    Input: "${text}"
                    Return JSON: { "title": string, "desc": string, "assigneeName": string (from list or empty), "priority": "緊急"|"高"|"中"|"低" }
                `;
                
                const result = await this.callGemini(prompt);
                if (result) {
                    try {
                        const clean = result.replace(/```json|```/g, '').trim();
                        const data = JSON.parse(clean);
                        
                        // マッチング
                        const member = this.state.members.find(m => m.name === data.assigneeName) || this.state.members[0];
                        
                        this.closeModal('voiceModal');
                        this.openTaskModal(null, member.id);
                        document.getElementById('taskTitleInput').value = data.title;
                        document.getElementById('taskDescInput').value = data.desc;
                        document.getElementById('taskPriorityInput').value = data.priority || '中';
                        
                        document.getElementById('aiSuggestionBadge').classList.remove('hidden');
                        document.getElementById('aiSourceText').textContent = text;
                    } catch (e) {
                        alert('解析に失敗しました');
                    }
                }
                
                document.getElementById('aiInputStep1').classList.remove('hidden');
                document.getElementById('aiInputStep2').classList.add('hidden');
                document.getElementById('aiPromptInput').value = '';
            }

            async polishDescription() {
                const desc = document.getElementById('taskDescInput').value;
                const title = document.getElementById('taskTitleInput').value;
                if (!desc && !title) return;
                
                const prompt = `ビジネスライクに推敲して: タイトル「${title}」, 内容「${desc}」`;
                const res = await this.callGemini(prompt);
                if (res) document.getElementById('taskDescInput').value = res.trim();
            }

            async generateSubtasks() {
                const title = document.getElementById('taskTitleInput').value;
                if (!title) return;
                const prompt = `タスク「${title}」を達成するためのサブタスクを3〜5個、JSON配列 ["手順1", "手順2"] で返して`;
                const res = await this.callGemini(prompt);
                if (res) {
                    try {
                        const arr = JSON.parse(res.replace(/```json|```/g, '').trim());
                        arr.forEach(t => this.addSubtaskItem(t));
                    } catch(e){}
                }
            }

            // Utils
            closeModal(id) { document.getElementById(id).classList.add('hidden'); }
            openVoiceModal() { document.getElementById('voiceModal').classList.remove('hidden'); }
            showToast(msg) {
                const div = document.createElement('div');
                div.className = 'toast-enter bg-slate-800 text-white px-4 py-2 rounded-lg shadow-lg text-sm font-bold flex items-center gap-2';
                div.innerHTML = `<i class="fa-solid fa-check text-green-400"></i> ${msg}`;
                document.getElementById('toastContainer').appendChild(div);
                setTimeout(() => div.remove(), 3000);
            }
        }

        // Init App
        const app = new TodoApp();
    </script>
</body>
</html>